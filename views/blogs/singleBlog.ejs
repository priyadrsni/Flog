              </div>
            </div>
            <div class="content">
              <%blog.body[0].split('\n').forEach(item => {%> <%if(item === '\r')
              {%>
              <br />
              <% } else { %>
              <p class="text"><%-item%></p>
              <% } %> <%})%>
            </div>
            <p class="text author">by <span><%=blog.author_name%></span></p>
          </article>
          <picture>
            <img src="<%=blog.image%>" alt="Recipe image" />
          </picture>
        </section>
      </section>
      <%- include('../partials/sidemenu.ejs'); %>
    </main>
    <%- include('../partials/footer.ejs'); %>
  </body>
</html>
